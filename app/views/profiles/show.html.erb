<%- model_class = Profile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<span width="100%">
<span width="50%">
<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @profile.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:city) %>:</strong></dt>
  <dd><%= @profile.city %></dd>
  <dt><strong><%= model_class.human_attribute_name(:state) %>:</strong></dt>
  <dd><%= @profile.state %></dd>
  <dt><strong><%= model_class.human_attribute_name(:country) %>:</strong></dt>
  <dd><%= @profile.country %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile) %>:</strong></dt>
  <dd><%= @profile.mobile %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_of_birth) %>:</strong></dt>
  <dd><%= @profile.date_of_birth %></dd>
  <dt><strong><%= model_class.human_attribute_name(:image) %>:</strong></dt>
  <dd><%=image_tag @profile.avatar.url(:thumb)  if !@profile.avatar_file_name.nil?%></dd>

</dl>

<div class="form-actions">
  <%#= link_to t('.back', :default => t("helpers.links.back")),
              profiles_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_profile_path(@profile), :class => 'btn' %>

  <%#= link_to t('.chage_password', :default => t("helpers.links.chage_password" )),
              change_password_path, :class => 'btn' %>

<span class="translation_missing btn" title="translation missing: en.helpers.links.chage_password", onclick="show_password('on');">Chage Password</span>
              
  <%#= link_to t('.destroy', :default => t("helpers.links.destroy")),
              profile_path(@profile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
</span>
<span id="pwd" width="50%" style="display:none">
<%= render :partial=>"change_password" %>
</span>
</span>
<script type="text/javascript">
  function show_password(x) {
    // body...
    if (x=="on"){
    $("#pwd").show();
    }
    else{
      $("#pwd").hide();
    }

  }
</script>