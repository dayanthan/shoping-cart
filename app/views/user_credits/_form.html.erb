<%= form_for @user_credit, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :created_user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :created_user_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :purchased_user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :purchased_user_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :item_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :item_id, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :credit_amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :credit_amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :admin_credit_amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :admin_credit_amount, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_credits_path, :class => 'btn' %>
  </div>
<% end %>
