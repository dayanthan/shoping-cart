<%- model_class = UserCredit -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:created_user_id) %>:</strong></dt>
  <dd><%= @user_credit.created_user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchased_user_id) %>:</strong></dt>
  <dd><%= @user_credit.purchased_user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:item_id) %>:</strong></dt>
  <dd><%= @user_credit.item_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:credit_amount) %>:</strong></dt>
  <dd><%= @user_credit.credit_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:admin_credit_amount) %>:</strong></dt>
  <dd><%= @user_credit.admin_credit_amount %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              user_credits_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_user_credit_path(@user_credit), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_credit_path(@user_credit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
